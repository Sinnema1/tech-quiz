{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["cypress", "node", "@testing-library/cypress", "./support/types"],
    "isolatedModules": false,
    "noEmit": true,
    "composite": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": [
    "../client/src/**/*.tsx",
    "../cypress/support/**/*.ts", 
    "../cypress/**/*.ts" 
  ],
  "exclude": ["node_modules"]
}
